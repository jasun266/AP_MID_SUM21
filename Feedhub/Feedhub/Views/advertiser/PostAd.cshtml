@model Feedhub.Models.add
@{
	Layout = null;
}

<style>
	#box {
		border: 1px solid black;
		height: 100%;
	}

	#main-div {
		height: 900px;
		background-image: url('../../Content/img/shop.jpg');
		background-size: 100% 900px;
	}

	.insidebox {
		border: 1px solid black;
		margin: 10% auto 10% auto;
		max-width: 500px;
		min-width: 200px;
		padding-left: 60px;
		padding-right: 60px;
		border-radius: 10px;
		background-color: whitesmoke;
	}

	div h1 {
		text-align: center;
	}

	p#para {
		text-align: center;
		font-size: 14px;
	}
</style>

<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />




<script src="js/bootstrap.min.js"></script>
<script src="http://code.jquery.com/jquery.js"></script>
<div id="main-div">
	<div id="box" class="img-responsive">
		@using (Html.BeginForm("PostAd",
						"advertiser",
						FormMethod.Post,
						new { enctype = "multipart/form-data" }))
		{
			<div class="insidebox">
				<div> <h1>Post An Ad</h1></div>



				<div class="form-group">
					<div class="input-group">
						<div class="input-group-addon"><span class="glyphicon glyphicon-search"></span></div>
						@Html.DropDownListFor(x => x.Category_id, ViewBag.categorylist as SelectList, "--select--", new { @class = "form-control" })
					</div>
					<span style="color:red">   @Html.ValidationMessageFor(x => x.Category_id) </span>

				</div>



				<div class="form-group">
					<div class="input-group">
						<div class="input-group-addon"><span class="glyphicon glyphicon-align-center"></span></div>
						@*<asp:TextBox ID="TextBox1" runat="server" class="form-control" placeholder="Username" required="required"></asp:TextBox>*@
						@Html.TextBoxFor(x => x.Name, new { @class = "form-control", @placeholder = "Product Name" })

					</div>
					<span style="color:red">   @Html.ValidationMessageFor(x => x.Name) </span>

				</div>



				<div class="form-group">
					<div class="input-group">
						<div class="input-group-addon"><span class="glyphicon glyphicon-shopping-cart "></span></div>
						@*<asp:TextBox ID="TextBox1" runat="server" class="form-control" placeholder="Username" required="required"></asp:TextBox>*@
						@Html.TextBoxFor(x => x.Price, new { @class = "form-control", @placeholder = "Price" })


					</div>
					<span style="color:red">   @Html.ValidationMessageFor(x => x.Price) </span>

				</div>
				<div class="form-group">
					<div class="input-group">
						<div class="input-group-addon"><span class="glyphicon glyphicon-calendar "></span></div>
						@Html.TextBoxFor(m => m.Date, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control" })

					</div>



				</div>

				<div class="form-group">
					<div class="input-group">
						<div class="input-group-addon"><span class="glyphicon glyphicon-text-background "></span></div>
						@*<asp:TextBox ID="TextBox1" runat="server" class="form-control" placeholder="Username" required="required"></asp:TextBox>*@
						@Html.TextAreaFor(x => x.Discription, new { @class = "form-control", @placeholder = "Description" })

					</div>
					<span style="color:red">   @Html.ValidationMessageFor(x => x.Discription) </span>

				</div>


				<div class="form-group">
					<div class="input-group">
						<div class="input-group-addon"><span class="glyphicon glyphicon-picture"></span></div>

						<input type="file" name="Image" id="Image" class="form-control" required="required" />



					</div>


				</div>



				<div class="form-group">

					<input type="submit" value="Add" class="btn btn-success btn-block" />

				</div>

				<div class="form-group">
					<p style="color:red">@ViewBag.error</p>
				</div>



			</div>

		}
	</div>

</div>


<script src="~/Scripts/jquery.validate-vsdoc.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}


