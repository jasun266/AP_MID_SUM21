@model ReviewHub.Models.Detail
@{

	ViewBag.Title = "Add Category";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
	td {
		padding: 20px;
	}
</style>


<div class="row">





	<div class="col-lg-8 col-md-8">

		<div>
			<h1>@Model.Title <small>AD-ID:@Model.Id</small></h1>
		</div>

		<img src="@Url.Content(@Model.Image)" style="width:800PX; height:450PX" />

		<div>
			<h1>Description: </h1>
			<p>@Model.Description</p>
		</div>


		<div style="margin-left:160px">

			@if (Convert.ToInt32(Session["Id"]) == Convert.ToInt32(Model.UserId))
			{


				@Html.ActionLink("Delete", "DeleteAd", new { @class = "btn btn-danger" , id = Model.Id })
			}
		</div>



		<table>


			<tr> <td>Category Name: </td> <td>@Model.Name </td> </tr>
			<tr> <td>Username: </td> <td>@Model.Username </td> </tr>
			<tr> <td>Email: </td> <td>@Model.Email </td> </tr>
			<tr> <td>Street: </td> <td>@Model.Street  </td> </tr>
			<tr> <td>City: </td> <td>@Model.City  </td> </tr>
			<tr> <td>Zip: </td> <td>@Model.Zip  </td> </tr>
			<tr> <td>Country: </td> <td>@Model.Country  </td> </tr>
			<tr>
				<td colspan="2">
				</td>
			</tr>

		</table>




	</div>



</div>


