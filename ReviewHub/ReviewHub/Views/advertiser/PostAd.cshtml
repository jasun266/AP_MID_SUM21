@model ReviewHub.Models.Detail

@{

	Layout = null;
}

<style>
	#box {
		border: 1px solid black;
		height: 100%;
	}

	#main-div {
		height: 600px;
		background-image: url('../../Content/img/a.jpg');
		background-size: 100% 540px;
	}

	.insidebox {
		border: 1px solid black;
		margin: 10% auto 10% auto;
		max-width: 500px;
		min-width: 200px;
		padding-left: 60px;
		padding-right: 60px;
		border-radius: 10px;
		background-color: whitesmoke;
	}

	div h1 {
		text-align: center;
	}

	p#para {
		text-align: center;
		font-size: 14px;
	}
</style>

<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />




<script src="js/bootstrap.min.js"></script>
<script src="http://code.jquery.com/jquery.js"></script>
<div id="nav_bar" style="background-color:#0d0d0d; height: 60px; width: 100%; font-family: arial; display: flex; align-items: center; text-align: center;">

		&nbsp; &nbsp;  &nbsp;
		<a href="/advertiser/Index" class="ht">All Category</a>
		&nbsp; &nbsp;  &nbsp;
		<a href="/advertiser/Allads" class="ht">All Product</a>
		&nbsp; &nbsp;  &nbsp;
		<a href="/advertiser/PostAd" class="ht">Post an Ad</a>

		<span style="margin-left:auto; margin-right:0; color:white ;font-size: 18px;">
			<b style="font-size: 40px;">FeedHub</b>
		</span>

		<span style="margin-left:auto; margin-right:0;">

			&nbsp; &nbsp; &nbsp; &nbsp;  &nbsp; &nbsp;
			<a href="signin.php" style="text-decoration: none;">
				<i title="sign out" class="fas fa-sign-out-alt" style="font-size:35px; color:black;"></i>
			</a>
			&nbsp; &nbsp; &nbsp; &nbsp;
		</span>




</div>
<div id="main-div">
	<div id="box" class="img-responsive">
		@using (Html.BeginForm("PostAd",
						"advertiser",
						FormMethod.Post,
						new { enctype = "multipart/form-data" }))
		{
		<div class="insidebox">
			<div> <h1>Post An Ad</h1></div>




			<div class="form-group">
				<div class="form-group">
					<label for="exampleInputEmail1">select category</label>
					@Html.DropDownListFor(x => x.AdvertiseCategoryId, ViewBag.categorylist as SelectList, "--select--", new { @class = "form-control" })

				</div>

				<span style="color:red">   @Html.ValidationMessageFor(x => x.AdvertiseCategoryId) </span>

			</div>



			<div class="form-group">
				<div class="input-group">
					<div class="input-group-addon"><span class="glyphicon glyphicon-align-center"></span></div>
				
					@Html.TextBoxFor(x => x.Title, new { @class = "form-control", @placeholder = "Product Name" })

				</div>
				<span style="color:red">   @Html.ValidationMessageFor(x => x.Title) </span>

			</div>


			<div class="form-group">
				<div class="input-group">
					<div class="input-group-addon"><span class="glyphicon glyphicon-calendar "></span></div>
					@Html.TextBoxFor(m => m.Created_at, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control", @placeholder = "Create Date" })

				</div>




			</div>
			<div class="form-group">
				<div class="input-group">
					<div class="input-group-addon"><span class="glyphicon glyphicon-calendar "></span></div>
					@Html.TextBoxFor(m => m.ExpirationDate, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control", @placeholder = "ExpirationDate" })

				</div>

			</div>


			<div class="form-group">
				<div class="input-group">
					<div class="input-group-addon"><span class="glyphicon glyphicon-align-center"></span></div>
			
					@Html.TextBoxFor(x => x.Street, new { @class = "form-control", @placeholder = "Street, Name" })

				</div>
				<span style="color:red">   @Html.ValidationMessageFor(x => x.Street) </span>

			</div>


			<div class="form-group">
				<div class="input-group">
					<div class="input-group-addon"><span class="glyphicon glyphicon-align-center"></span></div>
			
					@Html.TextBoxFor(x => x.City, new { @class = "form-control", @placeholder = "City Name" })

				</div>
				<span style="color:red">   @Html.ValidationMessageFor(x => x.City) </span>

			</div>


			<div class="form-group">
				<div class="input-group">
					<div class="input-group-addon"><span class="glyphicon glyphicon-align-center"></span></div>
	
					@Html.TextBoxFor(x => x.Country, new { @class = "form-control", @placeholder = "Country Name" })

				</div>
				<span style="color:red">   @Html.ValidationMessageFor(x => x.Country) </span>

			</div>


			<div class="form-group">
				<div class="input-group">
					<div class="input-group-addon"><span class="glyphicon glyphicon-align-center"></span></div>

					@Html.TextBoxFor(x => x.Zip, new { @class = "form-control", @placeholder = "Zip code" })

				</div>
				<span style="color:red">   @Html.ValidationMessageFor(x => x.Zip) </span>

			</div>



			<div class="form-group">
				<div class="input-group">
					<div class="input-group-addon"><span class="glyphicon glyphicon-text-background "></span></div>
			
					@Html.TextAreaFor(x => x.Description, new { @class = "form-control", @placeholder = "Description" })

				</div>
				<span style="color:red">   @Html.ValidationMessageFor(x => x.Description) </span>

			</div>


			<div class="form-group">
				<div class="input-group">
					<div class="input-group-addon"><span class="glyphicon glyphicon-picture"></span></div>

					<input type="file" name="Image" id="Image" class="form-control" required="required" />



				</div>


			</div>






			<div class="form-group">

				<input type="submit" value="Add" class="btn btn-success btn-block" />

			</div>

			<div class="form-group">
				<p style="color:red">@ViewBag.error</p>
			</div>



		</div>

		}
	</div>

</div>


<script src="~/Scripts/jquery.validate-vsdoc.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
