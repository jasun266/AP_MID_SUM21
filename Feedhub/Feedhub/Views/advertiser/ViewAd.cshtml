@model Feedhub.Models.Detail
@{
	//ViewBag.Title = "ViewAd";
	Layout = null;
	}

<style>
	td {
		padding: 20px;
	}
</style>


<div class="row">





	<div class="col-lg-8 col-md-8">

		<div>
			<h1>@Model.Name <small>AD-ID:@Model.ID</small></h1>
		</div>

		<img src="@Url.Content(@Model.Image)" style="width:800PX; height:450PX" />

		<div>
			<h1>Description: </h1>
			<p>@Model.Discription</p>
		</div>

		<table>

			<tr> <td>Price: </td> <td>@Model.Price </td> </tr>
			<tr> <td>Phone Number: </td> <td>@Model.PhoneNumber </td> </tr>
			<tr> <td>Email: </td> <td>@Model.Email1 </td> </tr>
			<tr> <td>Thana: </td> <td>@Model.Thana  </td> </tr>
			<tr> <td>Area: </td> <td>@Model.Area  </td> </tr>
			<tr> <td>City: </td> <td>@Model.City  </td> </tr>
			<tr> <td>Country: </td> <td>@Model.Country  </td> </tr>
			<tr>
				<td colspan="2">
					@if (Convert.ToInt32(Session["ID"]) == Convert.ToInt32(Model.advertiser_id))
					{

						@Html.ActionLink("Close this Ad", "DeleteAd", new { @class = "btn btn-info", id = Model.ID })



					}
				</td>
			</tr>

		</table>



	</div>



</div>

