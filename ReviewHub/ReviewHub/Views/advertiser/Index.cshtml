@using PagedList.Mvc
@model  PagedList.IPagedList<ReviewHub.Models.advertise_categories>

@{

	ViewBag.Title = "All Category";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>View  Category</title>
	<link href="~/Content/paginition.css" rel="stylesheet" />
	<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
	<link href="~/Content/bootstrap.css" rel="stylesheet" />
	<script src="https://kit.fontawesome.com/d4036902fd.js" crossorigin="anonymous"></script>
</head>
<body>




	<div class="row" style="margin-bottom:40px">
		@if (Model != null)
		{
			foreach (var item in Model)
			{
				<div class="col-lg-4 col-md-4" style="height:200px;margin-top:100px">

					<img class="img img-responsive cimg" src="@Url.Content(item.Image)" style=" height:100%;width:100% ;border-radius:50px 50px 50px 50px" />
					<h4 style="color:#808080; font-family:'Arial Rounded MT';text-align:center"> @Html.ActionLink(@item.Name, "Ads", new { id = @item.Id })</h4>

				</div>

			}
		}








	</div>


	</div>

	<div id="container" style="margin-left: 20px">
		<p></p>
		<p></p>
		<div class="pagination" style="margin-left: 400px">
			Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
			of @Model.PageCount   @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
		</div>
	</div>
</body>
</html>



